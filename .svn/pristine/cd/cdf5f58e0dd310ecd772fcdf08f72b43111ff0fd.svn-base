@charset "utf-8";
/* 机票查询列表页 */
body{
	background:#f0f0f0;}
.wapper{
	width:1190px;
	margin:0 auto;}
/******************************  头部样式   **************************************/
.TopNav{
	background:#000;
	position:fixed;
	top:0;
	z-index:3;
	width:100%;
	height:80px;}

.topmain img{
	float:left;
	margin-top:15px;}

.topmain .baozheng{
	float:right;
	margin:0;}


/********* 主内容 **********/
.login_main{
	background:url(../images/loginBg.jpg) no-repeat center;
	background-size:cover;
	width: 100%;
    height: 100%;
    z-index: 0;
	position:absolute;}

.login_main .login_box{
	margin-top:200px;
	float:right;
	width:380px;
	padding:20px;
	background:rgba(0,0,0,.8);
	height:388px;}

.login_main .login_box h3{
	font-size:18px;
	color:#fff;
	line-height:38px;
	border-bottom:1px solid #FFF;}

.login_main .login_box input{
	width:300px;
	height:48px;
	padding:0 10px;
	line-height:48px;
	border:none;
	float:left;
	background:#fff;font-size:15px;}

.login_main .login_box .Codea {
    width: 170px;
}

.login_main .login_box .user_p,.password_p,.Code{
	width:380px;
	float:left;
	margin-top:20px;
	border-bottom:none;
	height:48px;
	background:#fff;}

.login_main .login_box .user_p i{
	display:block;
	width:30px;
	height:32px;
	margin-top:10px;
	margin-left:5px;
	float:left;
	background:url(../images/login2.png) no-repeat center;
	background-position:0 -1px;}

.login_main .login_box .password_p i{
	display:block;
	margin-top:10px;
	margin-left:5px;
	width:30px;
	height:32px;
	float:left;
	background:url(../images/login2.png) no-repeat center;
	background-position:0 -31px;}
	
.login_main .login_box .Code i{
	display:block;
	margin-top:10px;
	margin-left:5px;
	width:30px;
	height:32px;
	float:left;
	background:url(../images/login3.png) no-repeat center;
	background-position:0 -6px;}


.login_main .login_box .code-len {
    background: #2ba5fa none repeat scroll 0 0;
    border-radius: 10px;
    color: #fff;
    display: block;
    float: left;
    height: 32px;
    line-height: 32px;
    margin-top: 8px;
    text-align: center;
    width: 100px;
}
	

.login_main .login_box .userLogin{
	color:#FFF;
	font-size:14px;
	background:#2ba5fa;
	line-height:40px;
	border-radius:10px;
	text-align:center;
	border:none;
	box-shadow:none;
	width:300px;
	margin-left:40px;
	margin-top:25px;
	display:inline-block;
	}

.login_main .login_box p .link_register{
	color:#fff;
	font-size:14px;
	line-height:26px;
	margin-left:120px;
	text-align:center;
	margin-top:15px;
	display:block;
	width:150px;}

.login_main .login_box p .link_register:hover{
	text-decoration:underline;}

.login_main .login_box .link{
	border-bottom:1px solid #666;
	height:40px;}

.login_main .login_box .more_login_box{
	width:380px;
	text-align:center;
	margin-top:20px;
	color:#fff;}

.login_main .login_box .more_login_box h4{
	font-size:14px;}

.login_main .login_box .more_login_box ul{
	float:left;
	margin-top:18px;
	margin-left:51px;}

.login_main .login_box .more_login_box ul li{
	padding-left:25px;
	font-size:14px;
	color:#fff;
	float:left;
	margin-left:30px;
	background:url(../images/login1.png) no-repeat left;}

.login_main .login_box .more_login_box ul li.qq_link{
	background-position:0 -31px;}

.login_main .login_box .more_login_box ul li.wei_link{
	background-position:0 -1px;}

.login_main .login_box .more_login_box ul li.xin_link{
	background-position:0 -62px;}

.footer{
	font-size:12px;
	text-align:center;
	color:#FFF;
	line-height:26px;
	margin-top:70px;
	text-shadow:1px 1px 1px #333;}
#captcha{width:150px;height:48px;cursor:pointer;}